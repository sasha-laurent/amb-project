{% extends '::Backend/subPage.html.twig' %}

{% block body %}
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="row">				
				<div class="col-md-6">{{ 'table.title'|trans }}</div>
				<div class="col-md-4 text-center">{{ 'table.topic'|trans }}</div>						
				<div class="col-md-2 text-center">{{ 'table.action'|trans }}</div>
        	</div>
		</div>
	</div>
	
	<ul class="list-group">
		{% for ontology in ontologies %}
			<li class="list-group-item row">
				<div class="col-md-6">
					{{ ontology.name }}
				</div>
				<div class="col-md-4 text-center">
					{{ ontology.topic.title }}
                </div>
                <div class="col-md-2 text-center">				
					<div class="btn-group" role="group" aria-label="...">
						<a href="{{ path('ontology_edit', {'ontology' : ontology.id}) }}" type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
						<a href="{{ path('ontology_delete', {'id' : ontology.id}) }}" type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
					</div>
				</div>
            </li>
        {% else %}
			<li class="list-group-item row">
				<div class="col-md-12 text-center">
					<em>{{ 'message.no_elt_found'|trans }}</em>
					<br/><br/>
				</div>
			</li>
		{% endfor %}
    </ul>

        <form action="{{ path('ontology_edit') }}" method="get" id="ontology-form" style="visibility:hidden; display:none;">
            <input type="text" name="ontology" id="ontology-input">
        </form>
{% endblock %}
