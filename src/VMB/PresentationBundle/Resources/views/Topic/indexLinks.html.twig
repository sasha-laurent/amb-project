<ul class="list-group">
{% for link in links %}
	<li class="list-group-item row" data-level="{{ link.lvl }}">			
		<div class="col-md-{{10-2*link.lvl}} col-md-offset-{{link.lvl}}">
			{% if link.__children is not empty %}
				<a class="collapsed" data-toggle="collapse" href="#collapseListGroup{{ link.id }}" aria-expanded="false" aria-controls="collapseListGroup{{ link.id }}">
				<span class="glyphicon glyphicon-triangle-right"></span>
				{{ link.title | shortenText(100, "...")}}
				</a> 
			{% else %}		
				<span class="glyphicon glyphicon-triangle-right"></span>
				{{ link.title | shortenText(100, "...") }}
			{% endif %}
		</div>
		<div class="col-md-2 {% if link.lvl != 0 %}col-md-offset-{{link.lvl}}{% endif %} text-center">				
			<div class="btn-group" role="group" aria-label="...">
				<a title="{{ "topic.edit"|trans|desc('Edit') }}" href="{{ path('topic_edit', {'id' : link.id}) }}" type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
				<a title="{{ "topic.delete"|trans|desc('Delete') }}" href="{{ path('topic_delete', {'id' : link.id}) }}" type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
			</div>
		</div>
	</li>
	{% if link.__children is not empty %}
	<div id="collapseListGroup{{ link.id }}" class="panel-collapse collapse" data-level="{{ link.lvl }}" role="tabpanel" aria-labelledby="collapseListGroupHeading{{ link.id }}">
	{% include "VMBPresentationBundle:Topic:indexLinks.html.twig" with {'links': link.__children} %}
	</div>
	{% endif %}
{% endfor %}
</ul>
