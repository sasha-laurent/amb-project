<ul>
{% for link in links %}
	<li data-level="{{ link.lvl }}">			
		<div class="row">
			<div class="col-md-10">
				{% for i in 1..link.lvl if link.lvl > 0 %}&nbsp;&nbsp;{% endfor %}
				<a href="{{ path("vmb_resource_browse_topic", {'topic': link.id, 'official':app.request.get('official')|default(null)}) }}" title="{{ link.title }}">
					{{ link.title }} ({{ link.__children|length }})
				</a>
			</div>
			<div class="col-md-2 text-right">
				<a class="collapsed" data-toggle="collapse" href="#collapseListGroup{{ link.id }}" aria-expanded="false" aria-controls="collapseListGroup{{ link.id }}">
					<span class="glyphicon glyphicon-chevron-down"></span>
				</a>
			</div>
		</div>
	</li>
	<div id="collapseListGroup{{ link.id }}" class="panel-collapse collapse" data-level="{{ link.lvl }}" role="tabpanel" aria-labelledby="collapseListGroupHeading{{ link.id }}">
	{% include "VMBResourceBundle:Resource:topicLink.html.twig" with {'links': link.__children} %}
	</div>
{% endfor %}
</ul>
