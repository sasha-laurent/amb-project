{% extends '::Backend/subPage.html.twig' %}

{% block body %}
    <div class="panel panel-default">
		<div class="panel-heading">
			<div class="row">			
				<div class="col-md-4">Titre</div>
				<div class="col-md-2 text-center">Créé</div>				
				<div class="col-md-2 text-center">Màj</div>				
				<div class="col-md-1 text-center">Taille</div>				
				<div class="col-md-1 text-center">Durée</div>
				<div class="col-md-2 text-center">Action</div>
        	</div>
		</div>
	</div>
	
	<ul class="list-group" id="sortable">
        {% for entity in entities %}
			<li class="list-group-item row">
                <div class="col-md-4"><span class="glyphicon glyphicon-{{ entity.getGlyphicon }}"></span> {{ entity.title }}</div>
                <div class="col-md-2 text-center">{% if entity.dateCreate %}{{ entity.dateCreate|date('d/m/y') }}{% endif %}</div>
                <div class="col-md-2 text-center">{% if entity.dateUpdate %}{{ entity.dateUpdate|date('d/m/y') }}{% endif %}</div>
                <div class="col-md-1 text-center">{{ entity.sizeToString }}</div>
                <div class="col-md-1 text-center">{% if entity.duration > 0 %}{{ entity.durationToString }}{% endif %}</div>
                <div class="col-md-2 text-center">				
					<div class="btn-group" role="group" aria-label="...">					
						<a href="{{ path('resource_edit', { 'id': entity.id }) }}" type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>					
						<a href="#" type="button" class="btn btn-default"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span></a>					
						<a href="{{ path('resource_delete', { 'id': entity.id }) }}" type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>					
					</div>
				</div>
            </li>
        {% endfor %}
    </ul>
    
    <div id="indicator" class="loading_indicator"></div>

	<div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
	  <div class="modal-dialog modal-lg">
		<div class="modal-content container">
		</div>
	  </div>
	</div>
{% endblock %}

{% block script %}
	<script>
	$('#myModal').modal({
        show: false
	});
	$('#myModal').on('show.bs.modal', function (e) {
		$('#indicator').show();
	});
	$('#myModal').on('shown.bs.modal', function (e) {
		$('#indicator').hide();
	});
	
	$('body').on('hidden.bs.modal', '.modal', function () {
	  $(this).removeData('bs.modal');
	});
	</script>
{% endblock %}
