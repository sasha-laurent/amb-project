<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="modalContextualHelpLabel">
		{% if help %}
			{{ 'help'|trans }} - {{ help.title }}
		{% else %}
			{{ 'Aide contextuelle'|trans }}
		{% endif %}
	</h4>
</div>
<div class="modal-body">
	{% if help %}
		{{ help.text }}
		{% if help.hasVideo %}
			<hr/>
			<div class="player">
				<video controls crossorigin>
					<source src="{{ asset(help.getVideoPath()) }}">
				</video>
			</div>
		{% endif %}
	{% else %}
		<em>{{ 'help.no_help_for_this_page'|trans }}</em>
	{% endif %}
</div>
