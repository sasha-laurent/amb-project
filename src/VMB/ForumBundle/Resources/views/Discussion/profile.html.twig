{% extends '::Backend/subPage.html.twig' %}

{% block body %}
	

	
	    <div class="panel panel-default">
			<div class="panel-heading">
				<div class="row">			
					<div class="col-md-3">{{ 'table.discussion'|trans }}</div>
					<div class="col-md-5">{{ 'table.description'|trans }}</div>	

					<div class="col-md-2">{{ 'table.creation'|trans }}</div>				
								
	        	</div>
			</div>
        </div>
            <ul class="list-group" id="sortable">
              {% for discussion in listDiscussions %}
              <li class="list-group-item row">
                <div>
                
                <div class="col-md-3"><a href="{{ path('discussion_show', { 'id' : discussion.id })}}" >{{ discussion.title }}</a></div>
				<div class="col-md-5">{{ discussion.description |truncate(50)}}</div>

				<div class="col-md-2">{{ discussion.date|date('Y-m-d') }}</div>
                
                </div>
                </li>
              {% endfor %}</ul>

   
{% endblock %}